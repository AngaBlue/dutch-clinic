{
  "name": "fue-perfect-email-app",
  "author": "AngaBlue <contact@anga.blue>",
  "private": false,
  "version": "2.1.0",
  "description": "A custom mail app for sending pre filled emails using a form.",
  "main": "./.webpack/main/index.js",
  "scripts": {
    "start": "SET ELECTRON_DISABLE_SECURITY_WARNINGS=true && electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint . --ext js,jsx,ts,tsx --fix"
  },
  "keywords": [],
  "license": "LGPL-3.0-or-later",
  "dependencies": {
    "@chakra-ui/icons": "1.0.16",
    "@chakra-ui/react": "1.6.10",
    "@emotion/react": "11",
    "@emotion/styled": "11",
    "@types/merge-images": "1.2.1",
    "framer-motion": "4",
    "merge-images": "2.0.0",
    "nodemailer": "6.7.0",
    "react": "17.0.2",
    "react-datepicker": "^4.3.0",
    "react-dom": "17.0.2",
    "react-hot-loader": "4.13.0"
  },
  "devDependencies": {
    "@angablue/eslint-config": "^1.0.4",
    "@babel/core": "7.15.8",
    "@babel/plugin-transform-runtime": "7.15.8",
    "@babel/preset-env": "7.15.8",
    "@babel/preset-react": "7.14.5",
    "@babel/preset-typescript": "7.15.0",
    "@electron-forge/cli": "6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "6.0.0-beta.61",
    "@electron-forge/plugin-webpack": "6.0.0-beta.61",
    "@electron-forge/publisher-github": "^6.0.0-beta.61",
    "@marshallofsound/webpack-asset-relocator-loader": "0.5.0",
    "@types/electron-devtools-installer": "2.2.0",
    "@types/nodemailer": "6.4.4",
    "@types/react": "17.0.30",
    "@types/react-dom": "17.0.9",
    "babel-loader": "8.2.2",
    "css-loader": "6.4.0",
    "electron": "15.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "eslint": "^8.1.0",
    "prettier": "2.4.1",
    "sass": "1.43.2",
    "sass-loader": "12.2.0",
    "style-loader": "3.3.0",
    "typescript": "4.4.4"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Fue Perfect Email App",
        "executableName": "fue-perfect-email-app",
        "icon": "assets/icon.png",
        "extraResource": [
          "assets"
        ]
      },
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack/main.webpack.js",
            "renderer": {
              "config": "./webpack/renderer.webpack.js",
              "entryPoints": [
                {
                  "html": "./public/index.html",
                  "js": "./src/index.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./electron/bridge.ts"
                  }
                }
              ]
            }
          }
        ]
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "setupIcon": "assets/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-dmg"
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "productName": "Fue Perfect Email App"
            }
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "AngaBlue",
              "name": "fue-perfect",
              "draft": false,
              "prerelease": false
            }
          }
        }
      ]
    }
  }
}
